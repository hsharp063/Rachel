@*
    Landing layout.
*@
@inherits UmbracoTemplatePage
@{
    Layout = "Main.cshtml";
}

@section uBlogsyHead{}
		<main id="content">

			@Umbraco.RenderMacro("BlogLandingImage")

			
			<section class="pt-medium pb-medium">

				<div class="container">
					<div class="row">
						<div class="col-md-8 col-md-offset-2">


        @if (Request.QueryString.Count == 0)
        {
            @Umbraco.Field("uBlogsyContentBody")
        }


		@Html.CachedPartial("uBlogsy/Landing/uBlogsyLandingListPosts", Model, 0, false, false, new ViewDataDictionary(ViewData) { { "ItemsPerPage", 20 } })		
						</div>

					</div><!-- row -->
				</div><!-- container -->
			</section>

		</main>